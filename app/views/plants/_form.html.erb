<%= simple_form_for [@plant] do |f| %>
  <%= f.error_notification %>
  <div class="container">
    <div class="row">
      <div class="form-group col-sm-8 col-sm-offset-2">
        <div class="form-inputs">
          <%= f.input :title, required: true, autofocus: true %>
          <%= f.input :description, required: true %>
          <%= f.input :care, required: true  %>
          <%= f.input :cost, required: true  %>
          <%= f.input :plant_type, collection: Plant::CATEGORY, as: :select, required: true %>
          <%= f.input :address, required: true %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>


        <div class="form-actions">
          <%= f.button :submit, "Complete" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
