<div class="banner plant-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @plant.photo, crop: :fill %>')">
  <div class="banner-content">
    <h1><%= @plant.title %></h1>
  </div>
</div>

<div class="plant-container">
  <div class="row">
    <div class="col-xs-5 col-xs-offset-2">
      <div class="plant-description">
        <h2>Description</h2>
        <ul class="list-inline">
          <li><%= @plant.description %></li>
          <% if policy(@plant).update? %>
            <li><%= link_to "Edit", edit_plant_path(@plant), class:"ml-3 text-warning fa fa-edit" %></li>
            <li><%= link_to "Delete", plant_path(@plant), method: :delete %></li>
          <% end %>
          <li><%= link_to 'Back', plants_path %></li>
        </ul>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="plant-booking">
        <h3>Book this plant</h3>
        <%= simple_form_for [@plant, @booking] do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :start_date, required: true, autofocus: true %>
            <%= f.input :end_date, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Complete" %>
          </div>
        <% end %>
      </div>
      <div class="plant-care">
        <h2>Plant Care</h2>
        <%= @plant.care %>
      </div>
    </div>
  </div>
</div>

