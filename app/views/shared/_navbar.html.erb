<div class="navbar-wagon navbar-fixed-top">
  <div>
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "logo-dill.png", height: 50 %>
    <% end %>

    <!-- Search -->
    <%= form_tag(search_plants_path, :method => "get", id: "search", class: "navbar-form navbar-right hidden-xs hidden-sm") do %>
      <div class="form-group">
        <%= text_field_tag :search, params[:search], class: "navbar-form-control", placeholder: "Search" %>
      </div>
      <%= button_tag(type: "submit", class: "btn btn-default navbar-btn") do %>
        <i class="fa fa-search"></i>
      <% end %>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to "Advertise your plant", plants_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Add a new plant", new_plant_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to bookings_path do %>
                <i class="fa fa-bookmark-o"></i>  <%= t(".your_bookings", default: "Your bookings") %>
              <% end %>
            </li>
            <li>
              <%= link_to my_plants_path do %>
                <i class="fa fa-tree"></i>  <%= t(".my_plants", default: "My plants") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class:"fas fa-trash-alt" do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= form_tag(search_plants_path, :method => "get", id: "search-form", class: "navbar-wagon-item navbar-wagon-link", type:"search") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search" %>
          <% end %>
        </li>
        <li>
          <%= link_to plants_path do %>
            <i class="fa fa-tree"></i> <%= t(".rent_plants", default: "Advertise your plant") %>
          <% end %>
        </li>
        <li>
          <%= link_to my_plants_path do %>
            <i class="fa fa-tree"></i>  <%= t(".my_plants", default: "My plants") %>
          <% end %>
        </li>
        <li>
          <%= link_to new_plant_path do %>
            <i class="fa fa-leaf"></i> <%= t(".new_plant", default: "Add a new plant") %>
          <% end %>
        </li>
        <li>
          <%= link_to bookings_path do %>
            <i class="fa fa-bookmark-o"></i>  <%= t(".your_bookings", default: "Your bookings") %>
          <% end %>
        </li>
        <li>
          <%= link_to edit_user_registration_path do %>
            <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= form_tag(search_plants_path, :method => "get", id: "search-form", class: "navbar-wagon-item navbar-wagon-link", type:"search") do %>
                <%= text_field_tag :search, params[:search], placeholder: "Search" %>
              <% end %>
            </li>
            <li>
              <%= link_to plants_path do %>
                <i class="fa fa-pagelines"></i> <%= t(".rent_plants", default: "Advertise your plant") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
                <i class="fa fa-sign-in"></i> <%= t(".sign_in", default: "Login") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
                <i class="fa fa-user-plus"></i> <%= t(".sign_up", default: "Sign up") %>
              <% end %>
            </li>
          </ul>
        </div>
    <% end %>
  </div>
</div>

